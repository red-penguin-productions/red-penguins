{
  "name": "plugins-nx-firebase",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/plugins/nx-firebase/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/plugins/nx-firebase",
        "main": "packages/plugins/nx-firebase/src/index.ts",
        "tsConfig": "packages/plugins/nx-firebase/tsconfig.lib.json",
        "assets": [
          "packages/plugins/nx-firebase/*.md",
          {
            "input": "./packages/plugins/nx-firebase/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/plugins/nx-firebase/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/plugins/nx-firebase",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/plugins/nx-firebase",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/plugins/nx-firebase/**/*.ts",
          "packages/plugins/nx-firebase/generators.json",
          "packages/plugins/nx-firebase/executors.json",
          "packages/plugins/nx-firebase/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/plugins/nx-firebase/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["nx"]
}
